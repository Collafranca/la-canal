---
import { CheckCircle2 } from "lucide-react";
import { Image } from "astro:assets";
import kitchen1 from "../assets/images/about/kitchen-1.png";
import kitchen2 from "../assets/images/about/kitchen-2.png";
import wineCellar from "../assets/images/about/wine-cellar.jpg";
import { siteContent } from "../data/siteContent";
---

<section
    id="sobre-nosaltres"
    class="py-16 md:py-32 bg-brand-surface relative overflow-hidden"
>
    <div
        class="absolute top-0 right-0 w-64 h-64 bg-brand-terra/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
    >
    </div>

    <div class="max-w-7xl mx-auto px-6 md:px-12">
        <div class="grid md:grid-cols-2 gap-12 md:gap-24 items-center">
            <div class="order-2 md:order-1 relative">
                <div class="grid grid-cols-2 gap-4">
                    <div class="space-y-4 mt-8">
                        <div
                            class="aspect-[3/4] bg-gray-300 rounded-none overflow-hidden relative group"
                        >
                            <Image
                                src={kitchen1}
                                alt={siteContent.about.images.kitchen1.alt}
                                class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                            />
                            <div
                                class="absolute inset-0 bg-brand-black/10 group-hover:bg-transparent transition-colors duration-500"
                            >
                            </div>
                        </div>
                        <div
                            class="aspect-square bg-gray-200 rounded-none overflow-hidden relative group"
                        >
                            <Image
                                src={wineCellar}
                                alt={siteContent.about.images.wineCellar.alt}
                                class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                            />
                            <div
                                class="absolute inset-0 bg-brand-black/10 group-hover:bg-transparent transition-colors duration-500"
                            >
                            </div>
                        </div>
                    </div>

                    <div class="space-y-4">
                        <div
                            class="aspect-square bg-brand-green/10 rounded-full flex items-center justify-center p-6 text-center border border-brand-green/20"
                        >
                            <div>
                                <span
                                    class="block text-3xl md:text-4xl font-serif font-bold text-brand-green mb-1"
                                    >{
                                        siteContent.about.stats.experience.value
                                    }</span
                                >
                                <span
                                    class="text-[10px] md:text-xs uppercase tracking-widest text-brand-black/60"
                                    >{
                                        siteContent.about.stats.experience.label
                                    }</span
                                >
                            </div>
                        </div>
                        <div
                            class="aspect-[3/4] bg-gray-300 rounded-none overflow-hidden relative group"
                        >
                            <Image
                                src={kitchen2}
                                alt={siteContent.about.images.kitchen2.alt}
                                class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                            />
                            <div
                                class="absolute inset-0 bg-brand-black/10 group-hover:bg-transparent transition-colors duration-500"
                            >
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="order-1 md:order-2">
                <h2
                    class="font-serif text-4xl md:text-6xl font-bold text-brand-black mb-6 md:mb-8 leading-[1.1]"
                >
                    {siteContent.about.title.line1}
                    <br />
                    <span class="text-brand-terra italic font-serif"
                        >{siteContent.about.title.line2}</span
                    >
                </h2>

                <div
                    class="space-y-6 text-lg text-brand-black/70 font-light leading-relaxed"
                >
                    {
                        siteContent.about.description.map((paragraph) => (
                            <p>{paragraph}</p>
                        ))
                    }
                </div>

                <div class="mt-10 pt-8 border-t border-brand-black/10">
                    <ul class="grid sm:grid-cols-2 gap-4">
                        {
                            siteContent.about.features.map((feature) => (
                                <li class="flex items-start gap-3">
                                    <CheckCircle2 className="w-5 h-5 text-brand-green flex-shrink-0 mt-1" />
                                    <span class="text-brand-black/80 text-sm font-medium tracking-wide uppercase">
                                        {feature}
                                    </span>
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div class="mt-8 flex items-center gap-2">
                    <div class="flex">
                        <span class="text-brand-terra">★★★★★</span>
                    </div>
                    <p class="text-brand-black/80 text-lg">
                        <span class="font-bold text-brand-black"
                            >{siteContent.about.googleRating.value}</span
                        >
                        {siteContent.about.googleRating.text}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
