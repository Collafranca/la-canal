---
import { ArrowRight } from "lucide-react";
import { Image } from "astro:assets";
import heroMainImg from "../assets/images/hero_main.webp";
import { siteContent } from "../data/siteContent";
---

<section
    id="inici"
    class="relative min-h-screen flex items-center pt-20 md:pt-32 pb-8 md:pb-20 overflow-hidden bg-brand-white"
>
    <div
        class="absolute inset-0 opacity-[0.03] pointer-events-none bg-[url('https://www.transparenttextures.com/patterns/concrete-wall.png')]"
    >
    </div>

    <div
        class="max-w-7xl mx-auto px-6 md:px-12 w-full grid md:grid-cols-2 gap-6 md:gap-24 items-center"
    >
        <div class="relative z-10 order-2 md:order-1">
            <span
                class="inline-block py-2 px-4 border border-brand-black/10 rounded-full bg-transparent text-brand-green text-xs md:text-sm font-semibold tracking-widest uppercase mb-3 md:mb-8"
            >
                {siteContent.hero.badge}
            </span>
            <h1
                class="font-serif text-4xl md:text-7xl/none font-bold mb-3 md:mb-8 text-brand-black tracking-tight"
            >
                {siteContent.hero.title.line1}
                <br />
                <span class="text-brand-terra italic font-serif pr-2"
                    >{siteContent.hero.title.line2}</span
                >
            </h1>
            <p
                class="text-lg md:text-xl text-brand-black/60 mb-5 md:mb-10 leading-relaxed max-w-lg font-light"
            >
                {siteContent.hero.description}
            </p>

            <div class="flex flex-col sm:flex-row gap-4 md:gap-6">
                <a
                    href={siteContent.hero.cta.link}
                    class="bg-brand-green text-white px-8 py-3 md:px-10 md:py-4 rounded-none font-medium text-base md:text-lg hover:bg-brand-black transition-all shadow-sm hover:shadow-xl hover:-translate-y-1 text-center uppercase tracking-wider"
                >
                    {siteContent.hero.cta.text}
                </a>
            </div>
        </div>

        <div class="relative order-1 md:order-2 h-[35vh] md:h-[70vh] w-full">
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 md:translate-x-0 md:left-auto md:right-0 w-4/5 h-full bg-brand-stone rounded-t-full overflow-hidden"
            >
                <Image
                    src={heroMainImg}
                    alt={siteContent.hero.imageAlt}
                    class="w-full h-full object-cover"
                    loading="eager"
                    fetchpriority="high"
                />
            </div>
        </div>
    </div>
</section>
