---
import { Image } from "astro:assets";
import { siteContent } from "../data/siteContent";
---

---

<section id="plats" class="py-16 md:py-24 bg-brand-white">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
        <div
            class="flex flex-col md:flex-row justify-between items-end mb-12 md:mb-16 gap-8"
        >
            <div class="max-w-2xl">
                <span
                    class="text-brand-green font-semibold tracking-widest uppercase text-xs mb-4 block"
                    >{siteContent.highlights.badge}</span
                >
                <h2
                    class="font-serif text-3xl md:text-5xl font-bold text-brand-black mt-2 mb-6"
                >
                    {siteContent.highlights.title}
                </h2>
                <p class="text-brand-black/60 text-lg font-light max-w-xl">
                    {siteContent.highlights.description}
                </p>
            </div>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
            {
                siteContent.highlights.dishes.map((dish) => (
                    <div class="group relative bg-transparent hover:-translate-y-2 transition-transform duration-500 ease-out">
                        <div class="aspect-[4/5] bg-gray-100 relative overflow-hidden mb-6 shadow-sm group-hover:shadow-xl transition-shadow duration-500">
                            <Image
                                src={dish.image}
                                alt={dish.title}
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                            />
                            <div class="absolute top-4 left-4 flex flex-wrap gap-2">
                                {dish.tags.map((tag) => (
                                    <span class="text-[10px] font-bold uppercase tracking-widest px-2 py-1 bg-white/90 text-brand-black backdrop-blur-sm">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </div>

                        <div class="pr-4">
                            <h3 class="font-serif text-2xl font-bold text-brand-black mb-3 group-hover:text-brand-green transition-colors">
                                {dish.title}
                            </h3>
                            <div class="w-12 h-px bg-brand-terra mb-4 opacity-50" />
                            <p class="text-brand-black/80 text-sm leading-relaxed font-light">
                                {dish.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
